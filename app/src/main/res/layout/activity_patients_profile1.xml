<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ColorBackground"
    tools:context="com.medoske.www.redheal_d.PatientsProfileActivity1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:elevation="1dp"
            android:scaleType="fitXY"
            android:background="@color/backgroundColor"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="100dp"
            android:elevation="6dp"
            app:cardUseCompatPadding="true">

        </android.support.v7.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/patientProfileImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp"
            android:elevation="10dp"
            android:src="@drawable/placeholderimage"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="3dp"
            android:layout_alignBottom="@+id/cardView"
            android:layout_alignLeft="@+id/cardView"
            android:layout_alignStart="@+id/cardView"
            android:layout_marginBottom="50dp" />

        <TextView
            android:id="@+id/txtPatientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cardView"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/patientProfileImg"
            android:elevation="10dp"
            android:text="TextView"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_alignRight="@+id/cardView"
            android:layout_alignEnd="@+id/cardView" />

        <TextView
            android:id="@+id/txtRhid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:text="TextView"
            android:layout_alignLeft="@+id/txtPatientName"
            android:layout_alignStart="@+id/txtPatientName"
            android:textSize="12sp"
            android:layout_below="@+id/txtPatientName" />

        <TextView
            android:id="@+id/txtReferenceNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtRhid"
            android:layout_alignStart="@+id/txtRhid"
            android:layout_below="@+id/txtRhid"
            android:elevation="10dp"
            android:text="TextView"
            android:textSize="12sp" />

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listReports"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></ListView>

</LinearLayout>
