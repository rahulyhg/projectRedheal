        />-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:id="@+id/imageView"
            android:layout_above="@+id/editText15"
            android:layout_centerHorizontal="true"
            android:src="@drawable/tipsbackground"
            android:scaleType="fitXY"/>

        <Spinner
            android:id="@+id/spinnerCatagoery"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etOther"
            android:maxLines="1"
            android:singleLine="true"
            android:hint=" Add Other"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etTitle"
            android:maxLines="1"
            android:singleLine="true"
            android:hint=" Add Title"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp" />
<!--
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="1"
            android:singleLine="true"
            android:ems="10"
            android:id="@+id/etSpecilization"
            android:layout_below="@+id/editText15"
            android:gravity="center"
            android:hint="Add Specilization"
            android:layout_marginTop="5dp" />-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:maxLines="5"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:id="@+id/etDescription"
            android:layout_below="@+id/editText16"
            android:gravity="center"
            android:hint="Description"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@color/colorAccent"
            android:id="@+id/submitButton"
            android:textColor="#ffffff"
            android:layout_below="@+id/editText17"
            android:layout_marginTop="5dp"
            android:clickable="true" />
    </LinearLayout>

