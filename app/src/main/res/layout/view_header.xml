<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:text="ExpandableLayout Header!"
        android:gravity="center"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expand_button"
        android:paddingLeft="14dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewpatient"
            app:civ_border_color="@android:color/black"
            app:civ_border_width="1dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/placeholderimage" />

        <TextView
            android:text="ramnaidu"
            android:id="@+id/name"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/imageViewpatient"
            />

        <TextView
            android:text="Dwaraka nagar,Vizag"
            android:id="@+id/clinicName"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageViewpatient"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clinicName"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:layout_toEndOf="@+id/imageViewpatient"
            android:layout_toRightOf="@+id/imageViewpatient"
            android:text="10/10/2016"
            android:id="@+id/dateText"/>

    </RelativeLayout>

</RelativeLayout>